<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_product"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_hanger"
                android:id="@+id/image_view_product"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <TextView
            android:textAlignment="center"
            android:id="@+id/text_view_title"
            style="@style/textViewMuliSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:minLines="2"
            android:text="Matcha Green Tea Ice"
            android:textColor="#363e2e"
            android:textSize="16sp" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/text_view_price"
            style="@style/textViewMuliExtraBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="10.000 Ä‘"
            android:textColor="#ec9787"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>